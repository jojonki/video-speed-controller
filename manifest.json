{
    "name": "Video Speed Controller",
    "version": "1.0",
    "description": "Control HTML video speed.",
    "permissions": [
        "activeTab",
        "notifications",
        "https://youtube.com/*"
    ],
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon_16.png",
            "32": "images/icon_32.png",
            "48": "images/icon_48.png",
            "128": "images/icon_128.png"
        },
        "default_title": "Copy Text with URL"
    },
    "commands": {
        "speed-up": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "MacCtrl+Shift+L"
            },
            "description": "Speed Up",
            "global": false
        },
        "speed-down": {
            "suggested_key": {
                "default": "Ctrl+Shift+J",
                "mac": "MacCtrl+Shift+J"
            },
            "description": "Speed Down",
            "global": false
        },
        "speed-neutral": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "MacCtrl+Shift+K"
            },
            "description": "Speed Neutral",
            "global": false
        }
    },
    "icons": {
        "16": "icon.png",
        "24": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}